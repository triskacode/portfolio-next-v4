# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# 2 space indentation for JavaScript, TypeScript, and JSON files
[*.{js,jsx,ts,tsx,json}]
indent_style = space
indent_size = 2

# 2 space indentation for CSS and SCSS files
[*.{css,scss}]
indent_style = space
indent_size = 2

# 2 space indentation for HTML files
[*.html]
indent_style = space
indent_size = 2

# 2 space indentation for YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Maintain consistency with Next.js config files
[next.config.{js,mjs,ts}]
indent_style = space
indent_size = 2
